{
    "version": "2.0.0",
    "tasks": [
        {
            // Installs and updates npm packages configured in package.json, as necessary
            "label": "{ node-install }",
            "command": "npm install",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            // Publish the ng-advanced-search library to npm
            "label": "{ publish-lib }",
            "command": "npm publish",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}\\dist\\ng-advanced-search"
            }
        },
        {
            // Build the ng-advanced-search library
            "label": "{ build-lib-prod }",
            "command": "ng build NgAdvancedSearch --prod",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            // Build the ng-advanced-search library in watch mode
            "label": "{ watch-lib }",
            "command": "ng build NgAdvancedSearch --watch",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            // Start the sample app in watch mode
            "label": "{ start-app }",
            "command": "ng serve",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
    ]
}